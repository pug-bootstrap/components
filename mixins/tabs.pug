//- Tabs
mixin tab-list(tabs,active)
  ul.nav.nav-tabs(role="tablist")
    each item,index in tabs
      - var tabId = 'tab-' + item
      - var href= '#' + tabId
      - var anchorId = item + '-tab'
      if (index === active)
        li.nav-item(role="presentation")
          a.nav-link.active(id=anchorId, href=href,role="tab",data-toggle="tab", aria-controls=tabId, aria-selected=true)= item
      else
        li.nav-item(role="presentation")
          a.nav-link(id=anchorId, href=href,role="tab",data-toggle="tab", aria-controls=tabId, aria-selected=false)= item
  .tab-content
    block
                

//- Tab pane
mixin tab(id,active)
  - var tabId = 'tab-' + id
  - var ariaLabel = id + '-tab'
  if(active)
    .tab-pane.fade.show.active(id=tabId, role="tabpanel", aria-labelledby=ariaLabel)
      block
  else
    .tab-pane.fade(id=tabId, role="tabpanel", aria-labelledby=ariaLabel)
      block

