//- Tabs with vertical pills
mixin tab-pills-vertical(tabs,active,leftColWidth, rightColWidth)
  .row
    div(class=leftColWidth)
      .nav.flex-column.nav-pills(role="tablist", aria-orientation="vertical")
        each item,index in tabs
          - var tabId = 'v-pills-' + item
          - var href= '#' + tabId
          - var anchorId = 'v-pills-' + item + '-tab'
          if (index === active)
            li.nav-item(role="presentation")
              a.nav-link.active(id=anchorId, href=href,role="tab",data-toggle="pill", aria-controls=tabId, aria-selected="true")= item
          else
            li.nav-item(role="presentation")
              a.nav-link(id=anchorId, href=href,role="tab",data-toggle="pill", aria-controls=tabId, aria-selected="false")= item
    div(class=rightColWidth)
      .tab-content
        block

