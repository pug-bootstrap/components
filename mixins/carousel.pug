//- carousel caption
mixin carousel-caption(item)
  .carousel-caption
    unless !item.h1
      h1 #{item.h1}
    unless !item.p
      p #{item.p}
    unless !item.button
      p
        a.btn.btn-lg.btn-primary(href="#{item.button.url}" role="button") #{item.button.caption}

//- carousel
mixin carousel(id,controls, indicators, length)
  .carousel.slide(id='carousel-' + id,data-ride="carousel")
    //- Indicators
    if indicators
      ol.carousel-indicators
        - var n = 0;
        while n < length
          li(data-target='carousel-' + id, data-slide-to=n++, class={active: n == 0})

    //- Wrapper for slides
    .carousel-inner
      block
      
    //-  Controls
    if controls
      a.carousel-control-prev(href='#carousel-' + id, role='button' data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carousel-' + id, role='button' data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
