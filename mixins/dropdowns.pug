//- Dropdown
mixin dropdown(caption, type)
  .dropdown
    button.btn.dropdown-toggle(id='dropdown-' + caption, class='btn-' + type, type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
      | #{caption}
    .dropdown-menu(aria-labelledby='dropdown-' + caption)
      block

mixin dropdown-link(caption, type)
  .dropdown
    a.btn.dropdown-toggle(id='dropdown-' + caption, class='btn-' + type, type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' href="#" role="button")
      | #{caption}
    .dropdown-menu(aria-labelledby='dropdown-' + caption)
      block

mixin dropdown-btn(caption,type)
  .btn-group
    button.btn.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' class='btn-' + type)
      | #{caption}
    .dropdown-menu
      block

