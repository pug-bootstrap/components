mixin dropdown-split(caption, type)
  .btn-group
    button.btn(type='button', class='btn-' + type) #{caption}
    button.btn.dropdown-toggle.dropdown-toggle-split(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' class='btn-' + type)
      span.sr-only Toggle Dropdown
    .dropdown-menu
      block

